{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://libretto/schemas/model/entities.schema.json",
  "title": "ModelEntities (MVP)",
  "type": "object",
  "properties": {
    "Character": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "archetype": { "type": "string" },
        "bio": { "type": "string" },
        "labels": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "Setting": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Arc": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "theme": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

