{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://libretto/schemas/events/import-review-submitted.schema.json",
  "title": "ImportReviewSubmitted",
  "type": "object",
  "required": ["proposals", "decisions", "bootstrapBranchVersionId"],
  "properties": {
    "proposals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["entityType", "proposedId"],
        "properties": {
          "entityType": { "type": "string", "enum": ["Character", "Setting", "Arc"] },
          "proposedId": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "sourceExcerpt": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["proposedId", "action"],
        "properties": {
          "proposedId": { "type": "string" },
          "action": { "type": "string", "enum": ["accept", "edit", "reject", "merge"] },
          "mergeWithId": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "bootstrapBranchVersionId": { "type": "string" }
  },
  "additionalProperties": false
}

